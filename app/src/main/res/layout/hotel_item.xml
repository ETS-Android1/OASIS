<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/hotelnameview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Heritance"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/checkdates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelnameview"
            android:layout_marginLeft="10dp"
            android:text="Check-in|Check-out Dates:"
            android:textColor="#B1A8A8"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/checkinview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkdates"
            android:layout_marginLeft="10dp"
            android:text="23/07/2022"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/checkoutview"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkinview"
            android:layout_marginLeft="10dp"
            android:text="27/07/2022"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pricehotelview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkoutview"
            android:layout_marginLeft="10dp"
            android:text="Hotel Price:"
            android:textColor="#B1A8A8"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/priceview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="91000"
            android:layout_below="@+id/pricehotelview"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@id/priceview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textAllCaps="false"
                android:layout_marginRight="5dp"
                android:id="@+id/btnEdithotelrr"/>

            <Button
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textAllCaps="false"
                android:layout_marginLeft="5dp"
                android:id="@+id/btnDeletehotel"/>
        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>